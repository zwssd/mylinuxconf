SetEnv m_size       32x32

# 停靠坞尺寸及位置设定
# 停靠坞位置计算式：f_dock_x = (ScreenWidth - DockWidth) / 2
SetEnv f_dock_x     500
SetEnv f_dock_size  900x45

# 注销对话框位置计算式：f_quit_x = (ScreenWidth - QuitWidth(280)) / 2
SetEnv f_quit_x     660

